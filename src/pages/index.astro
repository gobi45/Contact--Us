      background-size: 200% auto;
      color: transparent;
      background-clip: text;
      -webkit-background-clip: text;
      animation: textShine 4s linear infinite;
      margin-bottom: 15px;
    }
    @keyframes textShine {
      0% { background-position: 200% center; }
      100% { background-position: -200% center; }
    }
    .hero-description {
      font-size: 18px;
      color: #666;
      line-height: 1.6;
      margin-bottom: 40px;
    }

    /* ================= CONTACT ================= */
