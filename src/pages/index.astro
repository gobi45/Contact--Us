/* Floating header container */
.floating-header {
  position: fixed; /* stays on top while scrolling */
  top: 0;
  left: 0;
  width: 100%;
  background-color: white;
  display: flex;
  justify-content: space-between; /* logo left, menu right */
  align-items: center;
  padding: 5px 5px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  z-index: 1000;
}

/* Logo */
.floating-header .top-left-logo img {
  width: 220px; /* adjust as needed */
  height: auto;
}

/* Menu items (top-right) */
.floating-header .top-right-menu ul {
  list-style: none;
  display: flex;
  margin: 0;
  padding: 0;
}
.floating-header .top-right-menu ul li {
  margin-left: 20px;
}

.floating-header .top-right-menu ul li a {
  text-decoration: none;
  color: black;
  font-weight: 500;
  padding: 8px 12px;
  border-radius: 5px;
  font-size: 15px;  
  transition: background 0.3s, color 0.3s;
}

.floating-header .top-right-menu ul li a:hover {
  background-color: rgba(26, 23, 24, 0.097);
  color: rgb(87, 97, 182);
}

/* Responsive: stack menu below logo on small screens */
@media screen and (max-width: 768px) {
  .floating-header {
    flex-direction: column;
    align-items: flex-start;
  }

  .floating-header .top-right-menu ul {
    flex-direction: column;
    width: 100%;
    margin-top: 10px;
  }

  .floating-header .top-right-menu ul li {
    margin: 5px 0;
  }

  .floating-header .top-right-menu ul li a {
    width: 100%;
    text-align: left;
  }
}
