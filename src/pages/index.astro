    /* ================= HERO ================= */
    body { padding-top: 80px; }
    .hero {
      max-width: 1100px;
      margin: 160px auto;
      padding: 0 20px;
    }
    .animated-text {
      font-size: 38px;
      font-weight: bold;
      text-align: left;
